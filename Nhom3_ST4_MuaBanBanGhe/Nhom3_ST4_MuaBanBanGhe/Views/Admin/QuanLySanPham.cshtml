@{
    ViewBag.Title = "QuanLySanPham";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using Nhom3_ST4_MuaBanBanGhe.Models;
@model List<SanPham>
<br />
<br />
<br />
<h2 class="text-center text-primary">Hiển thị sản phẩm</h2>
<table class="table table-dark table-bordered table-hover">
    <tr>
        <td><label class="font-weight-bold">Tên</label></td>
        <td><label class="font-weight-bold">Hình</label></td>
        <td><label class="font-weight-bold">Giá</label></td>
        <td><label class="font-weight-bold">Mô Tả</label></td>
        <td><label class="font-weight-bold">Khuyến Mãi</label></td>
        <td><label class="font-weight-bold">Ngày Nhập</label></td>
        <td><label class="font-weight-bold">Số lượt xem</label></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><label>@item.Name</label></td>
            <td>
                <img style="width:200px;height:200px" src="~/Content/Hinh/@item.Hinh" />
            </td>
            <td>
                <label>@item.Gia</label>
            </td>
            <td>
                <label>@item.MoTa</label>
            </td>
                 <td>
                <label>@item.KhuyenMai</label>
            </td>
            <td>
                <label>@item.NgayNhap</label>
            </td>
            <td>
                <label>@item.SoLuotXem</label>
            </td>
            <td>
                <a href="@Url.Action("XoaSanPham", "Admin", new { masp = @item.idSanPham })">Xóa</a>
            </td>
        </tr>
    }
</table>
